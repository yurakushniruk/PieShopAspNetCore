@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using Utility 
@inject ShoppingCart cart

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Paaji+2&family=Great+Vibes&family=Poppins&family=Rokkitt:wght@100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/content/site.css">
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/e19c476714.js"></script>
    <script src="~/content/script.js"></script>
</head>
<body class="bg-white">
    <header>
        <div class="container-fluid mt-4">
            <div class="row">
                <div class="col-sm-4 col-lg-4 row row-cols-2">
                    <div class="col-sm-1 col-lg-7 text-right">
                        <i class="fas fa-map-marker-alt fa-2x text-left" style="color: #c14679"></i>
                    </div>
                    <div class="col-sm-8 col-lg-5 text-left hoverable">
                        523 Sylvan Ave<br />
                        Mountain View, CA 94041 USA
                    </div>
                </div>
                <div class="col-sm-5 col-lg-4 text-center mt-4 mt-lg-0">
                    <a asp-controller="Home" asp-action="Index"><img src="~/Images/logo-default-231x49.png" /></a>
                </div>
                <div class="col-sm-3 col-lg-4 text-center mt-4 mt-lg-0">
                    <a class="text-decoration-none button button-sm button-icon button-default-outline-3 button-zakaria"><span class="icon mdi mdi-email-outline far fa-envelope"></span>Contact us</a>
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid mt-4">
        <div class="row navbar-top">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-md navbar-light bg-white" role="navigation">
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav mx-auto mt-2 mt-lg-0">
                            <a asp-controller="Home" class="nav-item nav-link active" asp-action="Index">Home</a>
                            @await Component.InvokeAsync("CategoryMenu")
                            <a asp-controller="Contact" class="nav-item nav-link" asp-action="Index">Contact</a>
                        </div>
                        <div>
                                <span>@cart.ShoppingCartItems.Sum(x=>x.Amount)</span>
                                <a asp-controller="ShoppingCart" asp-action="Index" class="shopping-cart-nav shopping-cart-icon"></a>
                        </div>
                        <partial name="_LoginPartial" />
                    </div>
                </nav>
            </div>
        </div>
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>
