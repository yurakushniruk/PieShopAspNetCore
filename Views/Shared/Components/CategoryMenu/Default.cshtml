@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Pie"
       asp-action="Index"
       class="nav-item nav-link"
       data-toggle="dropdown">Pies<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
        <li>
            <a class="nav-item nav-link" asp-controller="Pie" asp-action="List"
               asp-route-category="@category.CategoryName">@category.CategoryName</a>
        </li>
    }
<li class="dropdown-divider"/>
        <li><a class="nav-item nav-link" asp-controller="Pie" asp-action="List" asp-route-Category="">View all pies</a></li>
    </ul>
</li>