@model IEnumerable<BethanysPieShop.Models.OrderDetail>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 mx-auto">
        <h1>Details</h1>

        <div>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pie.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <img src="@item.Pie.ImageUrl" width="200" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pie.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-area="Administration" asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>

            <a asp-action="Index">Back to List</a>
        </div>
        </div>
</div>